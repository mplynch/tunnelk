<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/showResultsLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <Button
        android:id="@+id/tweetResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/tweet_results"
        android:onClick="tweetClicked"
    />
    <Button
        android:id="@+id/machNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/mach_number"
        android:onClick="machClicked"
    />
    <Button
        android:id="@+id/pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/machNumber"
        android:layout_alignParentRight="true"
        android:layout_below="@id/machNumber"
        android:text="@string/pressure"
        android:onClick="pressureClicked"
    />
    <Button
        android:id="@+id/density"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/machNumber"
        android:layout_alignParentRight="true"
        android:layout_below="@id/pressure"
        android:text="@string/density"
        android:onClick="densityClicked"
    />
    <Button
        android:id="@+id/newSim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/new_sim"
        android:onClick="newSimClicked"
    />
    <ImageView
        android:id="@+id/resultsImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tweetResults"
        android:layout_toLeftOf="@id/machNumber"
        android:layout_alignParentTop="true"
        android:layout_above="@id/newSim"
        android:scaleType="fitCenter"
    />

</RelativeLayout>
