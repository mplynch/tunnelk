<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/mainButtonLayout"
        >
	    <Button
	        android:id="@+id/setTunnelConditions"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Set Tunnel Conditions"
	        android:onClick="setTunnelConditionsClicked"
	    />
	    <Button
	        android:id="@+id/setAirfoilShape"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/setTunnelConditions"
	        android:text="Set Airfoil Shape"
	        android:onClick="setAirfoilShapeClicked"
	    />
	    <Button
	        android:id="@+id/rotateShape"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/setAirfoilShape"
	        android:text="Rotate Shape"
	        android:onClick="rotateShapeClicked"
	    />
		<Button
	        android:id="@+id/simulate"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Simulate"
	    />
    </LinearLayout>
    <ScrollView
        android:id="@+id/solverTextScroll"
        android:layout_toRightOf="@id/mainButtonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
	    <TextView
	        android:id="@+id/solverOutput"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	    />
    </ScrollView>
</RelativeLayout>
